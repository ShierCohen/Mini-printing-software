<%- include('partials/head') %>

<body>
    <%- include('partials/navBar') %>

    <div class="container print-form">
      <b><a href="/queue"><i class="fa fa-angle-left" aria-hidden="true"></i>  Back</a></b>
        <h3><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  Edit job:</h3>
        <form class="form" method="POST" action="/<%= jobDetaild.jobId %>?_method=PATCH" id="printInfo">
            
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label">Project Name:</label>
                <div class="col-sm-10">
                 <input type="text" class="form-control" id="inputName" value="<%= jobDetaild.name %>" name='projectname' required>
                </div>              
            </div>
        
            <div class="form-group row">
                <label for="inputAddress" class="col-sm-2 col-form-label">Height:</label>
                <div class="form-group col-sm-10">
                    <label for="formControlRange">Select model's height:</label>
                    <input type="range" class="form-control-range" min="1" max="180" value="<%= jobDetaild.height %>" id="formControlRange" name='modelsize' onchange="rangevalue.value=value">
                    <output id="rangevalue" ><%= jobDetaild.height %></output> mm
                </div>
            </div>
    
               
            <div class="form-group row">
              <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" onclick="return confirmation()" >Save</button>               
              </div>              
            </div>
          </form></div>
        

          <script type="text/javascript">
            function confirmation() {
              return confirm('Are you sure?');
            }
        </script>       
          
</body>
</html>